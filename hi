class MyFile
{
    static void Main()

    {
        Console.WriteLine("Hello Anurag!, can u enter ur value:");

        String val1 = Console.ReadLine();
        int Val = Convert.ToInt16(val1);

        Console.WriteLine("Hi Beta Ur value is" + Val);
    }

}






